@model SimpleDictionary.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-absolute-center text-center" style="width: 240px; margin: 0 auto;">
    <form asp-controller="Account" asp-action="ForgotPassword" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row col s12">
            <p>Restore your password</p>
        </div>
        <div class="input-field">
            <div class="row col s12">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
            </div>
        </div>
        <div>
            <div class="row col s12">
                <input type="submit" class="btn" />
            </div>
        </div>
    </form>
</div>


