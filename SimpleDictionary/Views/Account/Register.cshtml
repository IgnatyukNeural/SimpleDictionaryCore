@model SimpleDictionary.Models.ViewModels.RegistrationViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" asp-controller="Account" class="form-absolute-center" style="width: 240px; margin: 0 auto;">
            <h3 class="text-center">Register</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="input-field">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" />
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <label asp-for="PasswordConfirm"></label>
                    <input asp-for="PasswordConfirm" />
                </div>
            </div>
            <div class="row text-center">
                <input type="submit" class="btn" />
            </div>
        </form>
    </div>
</div>

