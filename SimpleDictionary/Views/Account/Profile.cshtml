@model SimpleDictionary.Models.DataModels.User

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="profile-wrapper">
    <h1>Your profile</h1>
    <div class="user-definitions">
        @if (Model.Definitions.Count == 0)
        {
            <p class="text-center">You haven't created any definition yet</p>
        }
        else
        {
            @foreach (var definition in Model.Definitions)
            {
                <div class="col s12 m6 l6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">@definition.Name</span>
                            <p>@definition.Description</p>
                            <hr />
                            <pre>@definition.Example</pre>
                            <div class="hashtags">
                                @foreach (var hashtag in definition.Hashtags)
                                {
                                    <a asp-controller="Definition" asp-action="Search" asp-route-hashtag="@hashtag.Name">@hashtag.Name</a>
                                }
                            </div>
                        </div>
                        <div class="card-action">
                            <a asp-controller="Definition" asp-action="Delete" asp-route-id="@definition.Id">Delete</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>


