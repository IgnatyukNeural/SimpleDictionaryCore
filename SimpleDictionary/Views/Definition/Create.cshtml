@model SimpleDictionary.Models.ViewModels.DefinitionViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <form asp-controller="Definition" asp-action="Create" method="post" class="form-absolute-center" style="width: 400px; margin: auto;">
        <h2>Create a definition</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="input-field">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="input-field">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="input-field">
                    <label asp-for="Example"></label>
                    <textarea asp-for="Example"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="input-field">
                    <label asp-for="Hashtags"></label>
                    <input asp-for="Hashtags" />
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn">Publish</button>
        </div>
    </form>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
